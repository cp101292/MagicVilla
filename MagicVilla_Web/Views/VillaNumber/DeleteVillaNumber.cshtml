@model MagicVilla_Web.Models.Dto.VillaNumberDto

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container">
        <h2 class="text-primary">Delete Villa Number</h2>
        <hr />

        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNo" class="col-form-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="VillaNo" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="SpecialDetails" class="col-form-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="SpecialDetails" disabled class="form-control"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="VillaID" class="col-form-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="VillaID" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to list</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>